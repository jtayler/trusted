<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
    <div class="container-fluid">
        <!-- Brand Logo -->
        <a class="navbar-brand px-3" href="/">
            <img src="https://truanon.s3.amazonaws.com/img/dogwalklogo.png" alt="logo" height="72" class="d-inline-block align-text-top">
        </a>

        <!-- Toggler for Mobile View -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Breadcrumb Navigation -->
            <ol class="breadcrumb mb-0 navbar-nav me-auto">
                <li class="breadcrumb-item <% if (currentPage === 'Home') { %>active<% } %>">
                    <% if (currentPage === 'Home') { %>Home<% } else { %><a href="/">Home</a><% } %>
                </li>
                <li class="breadcrumb-item <% if (currentPage === 'Members') { %>active<% } %>">
                    <% if (currentPage === 'Members') { %>Members<% } else { %><a href="/users">Members</a><% } %>
                </li>
                <% if (currentPage === 'Member Profile' || currentPage === 'Edit') { %>
                    <li class="breadcrumb-item active">Member Profile</li>
                <% } %>
            </ol>

            <% if (!session.user) { %>
                <!-- Non-Logged-In User Links -->
                <div class="navbar-nav ms-auto">
                    <ul class="navbar-nav">
                        <li class="mx-2 <% if (currentPage === 'Signup') { %>active<% } %>">
                            <% if (currentPage === 'Signup') { %>Signup<% } else { %><a href="/signup">Signup</a><% } %>
                        </li>
                        <li class="mx-2 <% if (currentPage === 'Login') { %>active<% } %>">
                            <% if (currentPage === 'Login') { %>Login<% } else { %><a href="/login">Login</a><% } %>
                        </li>
                    </ul>
                </div>
            <% } else { %>
                <!-- Logged-In User -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-decoration-none" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <% 
                                const userDisplayData = getUserDisplayData(session.user); 
                            %>
                            <img class="rounded-circle border border-<%= userDisplayData.borderColor %> me-2" 
                                 src="<%= userDisplayData.photo %>" 
                                 alt="<%= session.user.username %> Photo" 
                                 style="width: 30px;">
                            <%= session.user.username %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/users/<%= session.user.username %>">Profile</a></li>
                            <li><a class="dropdown-item" href="/users/<%= session.user.username %>/edit">Edit</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            <% } %>

            <!-- Search Form -->
            <form class="d-flex mx-4">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
