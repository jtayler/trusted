<script>
    function openVerificationPopup(url) {
        const popupWidth = 480;
        const popupHeight = 840;
        const popupTop = (window.innerHeight - popupHeight) / 2 || 100;  // Fallback position if height is unavailable
        const popupLeft = (window.innerWidth - popupWidth) / 2 || 100;

        const popupWindow = window.open(
            url,
            "ta-popup",
            `width=${popupWidth},height=${popupHeight},top=${popupTop},left=${popupLeft},resizable,scrollbars`
        );

        if (popupWindow) {
            // Poll for window close event
            const timer = setInterval(() => {
                if (popupWindow.closed) {
                    clearInterval(timer);
                    window.location.reload();  // Reload to refresh verification status
                }
            }, 1000);
        } else {
            alert('Popup blocked! Please allow popups for this site.');
        }
    }
</script>



