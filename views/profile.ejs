<script>
window.onload = function () {
    const badgeArea = document.getElementById("badge-area");

    const githubConfig = verifiedDetails.dataConfigurations.find(
        config => config.dataPointName === "GitHub"
    );

    const icon = document.createElement("span");
    const title = document.createElement("h5");
    const description = document.createElement("p");
    const githubBadge = document.createElement("div");

    // Default badge for no verification
    icon.className = "text-warning fas fa-ban fa-10x mb-2 pt-2";
    title.innerText = "Engineering Badge Unavailable";
    description.innerText = "No validating credentials provided.";
    githubBadge.classList.add("border-warning");
    githubBadge.appendChild(icon);
    githubBadge.appendChild(title);
    githubBadge.appendChild(description);
    githubBadge.classList.add("card", "text-center", "p-3", "m-3");

    title.classList.add("card-title", "text-dark", "mb-1", "pt-4");
    description.classList.add("card-text", "text-muted");

    // Check if GitHub configuration exists
    if (githubConfig) {
        // Check if the data is marked as "Privately Verified"
        if (githubConfig.displayValue.startsWith("Privately Verified")) {
            // Skip fetch and show default badge for no verification
            badgeArea.insertAdjacentElement("afterend", githubBadge);
            return; // Exit early
        }

        // If it's not private, proceed to fetch data
        const loadingPlaceholder = document.createElement("div");
        loadingPlaceholder.classList.add("text-center", "p-3", "m-3", "text-muted");
        loadingPlaceholder.innerHTML = `
            <div>
                <div class="fas fa-spinner fa-spin fa-2x mb-4 mt-4"></div>
            </div>
        `;
        badgeArea.insertAdjacentElement("afterend", loadingPlaceholder);

        fetch(`/users/<%= user.username %>/github`) // Fetch user data
            .then(response => response.json())
            .then(data => {
                // Remove the loading placeholder
                loadingPlaceholder.remove();


                 title.classList.add("text-success");
                 description.innerHTML = "Engineer Status Validated.";
                 githubBadge.classList.add("text-success", "border-success");

                icon.className = "fas fa-award fa-10x mb-2 pt-2";
                // Check if GitHub account is verified
                if (data.fullName && data.totalRepos > 0) {
                    title.innerHTML = `${data.fullName}<br>${data.totalRepos} Repos`;
                } else {
                  title.innerHTML = `No Name<br>No Repos`;
                }

                    repoList.innerHTML = `
                        <span class="text-muted small fst-italic">No languages detected</span>
                        <div><br><hr><br>
                            <p>This authoritative information has been validated at the source and securely transferred to ensure trusted use.</p>
                        </div>
                        <div class="text-secondary"> Trusted Sources Are: Bitbucket, GitLab, SourceForge, Codeberg, and GitHub</div>
                    `;

                // Deduplicate and display repository languages
                if (data.repos && data.repos.length > 0) {
                    const allLanguages = data.repos.flatMap(repo =>
                        repo.languages.split(", ").filter(lang => lang.trim() !== "")
                    );
                    const uniqueLanguages = [...new Set(allLanguages)];

                    const repoList = document.createElement("div");
                    repoList.innerHTML = `
                        <span class="text-muted small fst-italic">${uniqueLanguages.join(", ") || "No languages detected"}</span>
                        <div><br><hr><br>
                            <p>This authoritative information has been validated at the source and securely transferred to ensure trusted use.</p>
                        </div>
                        <div class="text-secondary"> Trusted Sources Are: Bitbucket, GitLab, SourceForge, Codeberg, and GitHub</div>
                    `;
                    githubBadge.appendChild(repoList);
                }

                // Add the GitHub badge to the badge area
                badgeArea.insertAdjacentElement("afterend", githubBadge);
            })
            .catch(error => {
                console.error("Error fetching GitHub data:", error);

                // Replace loading placeholder with an error message
                loadingPlaceholder.innerHTML = `
                    <div>
                        <i class="fas fa-exclamation-circle fa-2x text-danger"></i>
                        <p>Failed to load GitHub data.</p>
                    </div>
                `;
            });
    } else {
        // No GitHub configuration, show default badge
        badgeArea.insertAdjacentElement("afterend", githubBadge);
    }
};
</script>

